<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prjMyExam.frmLogin">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="Usuario" FontSize="30" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds=".5,.2,.3,.1" AbsoluteLayout.LayoutFlags="All" 
            LineBreakMode="WordWrap"> </Label>
            <Entry x:Name="txtUsername" Placeholder="Ingrese su usuario" FontSize="22" HorizontalOptions="Center" VerticalOptions="Center" AbsoluteLayout.LayoutBounds=".5,.22,.5,.1" 
            AbsoluteLayout.LayoutFlags="All"></Entry>

            <Label Text="Contraseña" FontSize="30" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds=".5,.4,.3,.1" AbsoluteLayout.LayoutFlags="All"
            LineBreakMode="WordWrap">  </Label>
            <Entry x:Name="txtPassword" IsPassword="true" Placeholder="Ingrese su contraseña" FontSize="22" HorizontalOptions="Center" VerticalOptions="Center" AbsoluteLayout.LayoutBounds=".5,.42,.5,.1" 
            AbsoluteLayout.LayoutFlags="All"></Entry>

            <Button Text="Iniciar Sesión" x:Name="btnLogin" FontSize="20" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds=".5,.6,.5,.1" AbsoluteLayout.LayoutFlags="All"
            ></Button>
          
          </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>