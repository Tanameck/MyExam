<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:prjMyExam"
             x:Class="prjMyExam.MainPage">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username" Font="Arial" FontSize="Medium"></Label>
            <Entry x:Name="txtUsername" FontSize="Small" Placeholder="Enter your username"></Entry>
            
            <Label Text="Password" Font="Arial" FontSize="Medium"></Label>
            <Entry x:Name="txtPassword" FontSize="Small" Placeholder="Enter your password"></Entry>
            
            <Button Text="Login" x:Name="btnLogin"></Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>